Version (1.00)

Property
{
  Name = %GLOSS_MAP
  Mask = 0x10
  Property    (Gloss map)
  Description (Use gloss map as separate texture)
  DependencySet = $TEX_Gloss
  DependencyReset = $TEX_Gloss
  Hidden
}
Property
{
  Name = %GLOSS_DIFFUSEALPHA
  Mask = 0x20
  Property    (Gloss map DifAlpha)
  Description (Use gloss map as alpha channel in diffuse texture)
}
Property
{
  Name = %ENVCMSPEC
  Mask = 0x80
  Property    (Specular EnvCM)
  Description (Use per-pixel Env. CM reflections with fresnel)
  DependencyReset = $TEX_EnvCM
}
Property
{
  Name = %SPECULARPOW_GLOSSALPHA
  Mask = 0x800
  Property    (PerPixel Spec. Shinines)
  Description (Use specular shininess coef. as alpha channel of gloss texture)
  DependencyReset = $TEX_Gloss
}
Property
{
  Name = %ALPHAGLOW
  Mask = 0x2000
  Property    (Glow in Diffuse alpha)
  Description (Use alpha channel of diffuse texture for glow)
}
Property
{
  Name = %DETAIL_BUMP_MAPPING
  Mask = 0x4000
  Property    (Detail bump mapping)
  Description (Use detail bump mapping)
}
Property
{
  Name = %OFFSETBUMPMAPPING
  Mask = 0x20000
  Property    (Offset bump mapping)
  Description (Use Offset bump mapping (requires height map in alpha channel of bump texture))
  DependencyReset = $TEX_Bump
}

Property
{
  Name = %BUMP_DIFFUSE
  Mask = 0x100000
  Property    (BumpDiffuse)
  Description (Use separate bump map for diffuse lighting)
  DependencySet = $TEX_BumpDiffuse
  DependencyReset = $TEX_BumpDiffuse
  Hidden
}
Property
{
  Name = %VERTCOLORS
  Mask = 0x400000
  Property    (Vertex Colors)
  Description (Use vertex colors)
}
Property
{
  Name = %ALLOW_POM
  Mask = 0x1000000
  DependencySet = $HW_AllowPOM
  DependencyReset = $HW_AllowPOM
  Hidden  
}
Property
{
  Name = %DECAL
  Mask = 0x2000000
  Property    (Decal)
  Description (Use as Decal)
}
Property
{
  Name = %CHARACTER_DECAL
  Mask = 0x4000000
  Property    (Character Decal)
  Description (Use as Character Decal)
}

Property
{
  Name = %PARALLAX_OCCLUSION_MAPPING
  Mask = 0x8000000
  Property    (Parallax occlusion mapping)
  Description (Use parallax occlusion mapping (requires height map in alpha channel of bump texture))
  DependencyReset = $TEX_Bump
}
Property
{
  Name = %STAT_BRANCHING
  Mask = 0x10000000
  DependencySet = $HW_StaticBranching
  DependencyReset = $HW_StaticBranching
  Hidden
}
Property
{
  Name = %DYN_BRANCHING
  Mask = 0x20000000
  DependencySet = $HW_DynamicBranching
  DependencyReset = $HW_DynamicBranching
  Hidden
}
